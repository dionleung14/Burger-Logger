<h1>Eat-a-Burger!</h1>

<main>
  <section id="to-be-eaten">
    <h2>Burgers to be nommed</h2>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/unless}}
      {{/each}}
    </ul>
  </section>
  <section id="already-eaten">
    <h2>Burgers already nommed</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/if}}
      {{/each}}
    </ul>
  </section>
</main>

<div id="place-order">
<h2>Order a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Enter your burger order</label>
    <input type="text" id="burger" name="burger_name">
  </div>

  <button type="submit">Order up!</button>
</form>
</div>